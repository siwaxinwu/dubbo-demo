<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

	<dubbo:application name="user-service-provider"/>
	
	<dubbo:registry address="zookeeper://1.117.109.40:2181?backup=1.117.109.40:2182,1.117.109.40:2183" />

	<dubbo:protocol name="dubbo" port="20880"/>

	<!-- 服务的实现 -->
	<bean id="userServiceImpl" class="com.roy.service.UserServiceImpl"/>
	<dubbo:service interface="com.roy.service.UserService"
		ref="userServiceImpl">
		<dubbo:method name="getUserAddressList" />
	</dubbo:service>

	<!--统一设置服务提供方的规则  -->
	<dubbo:provider timeout="1000"/>
	<!-- 连接监控中心 -->
	<dubbo:monitor protocol="registry"/>
</beans>
